
<div class="card">
  <div class="card-header">



<h2>Modifier mon profil </h2>

<div class="card-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field  form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :Mot_de_passe %> <i>(Laissez le champ vide si vous ne voulez pas changer votre mot de passe)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Mot de passe"%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caractères au minimum</em>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label :Confirmez_votre_Mot_de_passe %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmez votre mot de passe"%>
  </div>

  <div class="field form-group">
    <%= f.label :Mot_de_passe_actuel %> <i>(Nous avons besoin de votre Mot de passe actuel pour confirmer les chamgements )</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:"Mot de passe actuel" %>
  </div>
<br/>
  <div class="actions">
    <%= f.submit "Mettre à jours", class:'btn btn-secondary'%>
  </div>
<% end %>
<br/><br/>

<div class="card">
  <div class="card-header">
<h3>Supprimer mon compte</h3>
 </div>
 <div class="card-body">
    <p class="card-text"><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn btn-danger' %></p>
</div>
</div>

<%= link_to "Back", :back, class:'btn btn-secondary'%>

  </div>
</div>