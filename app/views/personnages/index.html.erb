
<h2> Personnages </h2>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Nom</th>
      <th>Points de vie</th>
      <th>Points attaque</th>
      <th > </th>
    </tr>
  </thead>

  <tbody>
    <% @personnages.each do |personnage| %>
    <% if current_user.id == personnage.user_id %>
      <tr>
   
         <td><%= link_to  personnage.Nom , personnage %>
                  </td>
     
        <td><%= personnage.Points_de_vie %></td>
        <td><%= personnage.Points_attaque %></td>
       <td><%= link_to 'Supprimer',  personnage, method: :delete, data: { confirm: 'Are you sure?'},class:"btn btn-outline-danger btn-sm"  %></td>
      </tr>
      <% end %>
    <% end %>

  </tbody>
</table>

<h2> Choisissez deux personnages pour lancer le combat </h2>

<div class="field  form-group">
    <form  action="/combat">
    

    <input  type="text" name="personnage1" class ="form-control" placeholder="Tappez votre premier personnage" >
     </div>
     <div class="field  form-group">
    <input  type="text" name="personnage2" class ="form-control"  placeholder="Tappez votre deuxieme personnage" >
   </div>
   <br/>
    <button type="submit" class="btn btn-secondary"> Lancer le combat </button>
    <br/>
  </div>

